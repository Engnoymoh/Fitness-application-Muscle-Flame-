<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:gravity="center_horizontal"
    android:paddingHorizontal="20dp"
    android:paddingBottom="100dp"
    android:background="@color/white">

    <!-- ImageView for the High Knees exercise -->
    <ImageView
        android:id="@+id/imageViewHighKnees"
        android:layout_width="242dp"
        android:layout_height="181dp"
        android:background="@drawable/knees" />

    <!-- Instructions for the High Knees exercise -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="How to do High Knees:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Stand with your feet hip-width apart."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Lift one knee towards your chest, then quickly switch to the other knee."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Continue the movement, alternating legs as if you are jogging in place."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Add more instructions as needed -->

</LinearLayout>
