<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:gravity="center_horizontal"
    android:paddingHorizontal="20dp"
    android:paddingBottom="100dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageViewPress"
        android:layout_width="242dp"
        android:layout_height="177dp"
        android:background="@drawable/press" />

    <TextView
        android:id="@+id/instructionsTextViewPress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="How to do Seated Dumbbell Shoulder Press:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Sit on a bench with a dumbbell in each hand, palms facing forward."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Lift the dumbbells to shoulder height, keeping your elbows bent and close to your body."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Press the dumbbells upward until your arms are fully extended overhead."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Additional instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Lower the dumbbells back to shoulder height in a controlled manner."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
