                        android:layout_height="119dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <!-- CardView content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
