                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Additional CardView -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvlat"
                        android:layout_width="180dp"
                        android:layout_height="119dp"
                        android:layout_margin="8dp"
